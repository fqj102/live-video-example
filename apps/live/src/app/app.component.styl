video_width = 300px;
video_height = 300px;

:host
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

.content
  width: 90%;
  height: 90%;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: row;

  .videos
    flex: 3;
    display: flex;

    &::-webkit-scrollbar
      width: 8px;

    &::-webkit-scrollbar-track
      background: #f1f1f1;

    &::-webkit-scrollbar-thumb
      background: #888;

    &::-webkit-scrollbar-thumb:hover
      background: #555;

    .live
      transform: scaleX(-1);
      object-fit: cover;
      width: video_width;
      height: video_height;

  .list
    flex: 1;
    border-left: 1px solid rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;

    .title
      font-size: 12px;
      padding: 8px 0 0 8px;

      span
        font-size: 15px;
        color: #f3a380;

    ul
      flex: 1;
      margin: 0px;
      padding: 0px;
      list-style-type: none;
      overflow: auto;
      transition: all 1s ease;

      &::-webkit-scrollbar
        width: 8px;

      &::-webkit-scrollbar-track
        background: #f1f1f1;

      &::-webkit-scrollbar-thumb
        background: #888;

      &::-webkit-scrollbar-thumb:hover
        background: #555;

li
  padding: 6px;

.message-content
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 3em;
  border-top: 1px solid rgba(0, 0, 0, 0.3);

  .msg
    flex: 1;
    height: 100%;
    padding: 4px;
    border: none;

  .send
    text-transform: uppercase;
    background: #f3a380;
    color: #000;
    border: none;
    height: 100%;
    padding: 4px;
    width: 6em;
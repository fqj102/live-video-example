:host
  display: block;

.local-video
  border: 3px solid red;

.remote-video
  border: 3px solid blue;
  
.message-container
  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-template-areas: 'title' 'message-list';
  justify-items: center;

  ul
    list-style-type: none;
    border: 1px solid #000;
    width: 400px;
    height: 200px;
    padding: 8px;
    overflow: auto;

.send-container
  text-align: center;
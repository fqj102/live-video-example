:host
  display: block;

h2
  text-align: center;

section
  margin-top: 10px

.connect
  display: grid;
  grid-template-rows: repeat(3, auto);
  grid-row-gap: 6px
  grid-template-areas: 'username' 'roomid' 'button';
  justify-items: center


.message-container
  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-template-areas: 'title' 'message-list';
  justify-items: center

  ul
    list-style-type: none
    border: 1px solid #000
    width: 400px;
    height: 200px;
    padding: 8px;
    overflow: auto;


.send-container
  text-align: center;